extends master.pug

block head
  if injectCode.css
    style(type='text/css')!= injectCode.css

block body
  #root
    editor(
      :page-id=page.id
      locale=page.localeCode
      path=page.path
      title=page.title
      description=page.description
      :tags=page.tags
      :is-published=page.isPublished
      publish-start-date=page.publishStartDate
      publish-end-date=page.publishEndDate
      script-css=page.extra.css
      script-js=page.extra.js
      init-mode=page.mode
      init-editor=page.editorKey
      init-content=page.content
      checkout-date=page.updatedAt
      effective-permissions=Buffer.from(JSON.stringify(effectivePermissions)).toString('base64')
      approval-status=page.approvalStatus
      approval-comment=page.approvalComment
      :pending-version-id=page.pendingVersionId
      approver-name=page.approverName
      approver-email=page.approverEmail
      origin=page.origin
      )
